{
  "name": "cyberian-soft-weaponry.net",
  "description": "Cyberian Soft Weaponry",
  "version": "0.0.2",
  "author": "Barnaby Sheeran",
  "license": "MIT",
  "scripts": {
    "start": "webpack serve --config script/webpack.config.development.js",
    "build": "webpack --config script/webpack.config.production.js",
    "lint:js": "eslint . || exit 0",
    "lint:css": "stylelint \"**/*.css\" || exit 0",
    "lint:todo": "leasot \"src/**/*.{js,css,html}\" || exit 0",
    "lint": "run-s lint:*"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.25.1",
    "@babel/preset-env": "^7.25.3",
    "babel-loader": "^9.1.3",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "eslint": "8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.2.1",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.6.0",
    "leasot": "^14.4.0",
    "mini-css-extract-plugin": "^2.9.0",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.3.3",
    "stylelint": "^16.8.1",
    "stylelint-config-recommended": "^14.0.1",
    "terser-webpack-plugin": "^5.3.10",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "browserslist": [
    "Last 2 versions"
  ],
  "eslintConfig": {
    "parser": "@babel/eslint-parser",
    "env": {
      "es6": true,
      "browser": true
    },
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "warn"
      ],
      "linebreak-style": 0,
      "no-underscore-dangle": 0,
      "lines-between-class-members": 0
    }
  },
  "eslintIgnore": [
    "README.md",
    "package-lock.json",
    "/dist"
  ],
  "prettier": {
    "useTabs": true,
    "singleQuote": true,
    "printWidth": 80,
    "endOfLine": "auto"
  },
  "stylelint": {
    "extends": "stylelint-config-recommended",
    "ignoreFiles": [
      "./node_modules",
      "./dist/**"
    ],
    "rules": {
      "no-invalid-position-at-import-rule": null,
      "at-rule-no-unknown": null
    }
  }
}
